# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# Django Secret Key - Change this in production!
DJANGO_SECRET_KEY=your-super-secret-key-here-change-in-production

# Debug Mode (True for development, False for production)
DEBUG=True

# Allowed Hosts - Comma separated for production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# ============================================================================
# AWS S3 / CLOUD STORAGE CONFIGURATION
# ============================================================================

USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_STORAGE_BUCKET_NAME=your-bucket-name-here
AWS_S3_REGION_NAME=us-east-1

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password-here
DEFAULT_FROM_EMAIL=noreply@g-classics.com

# ============================================================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================================================

PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id-here
PAYPAL_SECRET_KEY=your-paypal-secret-key-here

STRIPE_PUBLIC_KEY=your-stripe-public-key-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

CSRF_TRUSTED_ORIGINS=http://localhost:8000
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True

# ============================================================================
# SOCIAL AUTHENTICATION
# ============================================================================

GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

FACEBOOK_APP_ID=your-facebook-app-id-here
FACEBOOK_APP_SECRET=your-facebook-app-secret-here

# ============================================================================
# SITE CONFIGURATION
# ============================================================================

SITE_NAME=G-CLASSICS
SITE_URL=http://localhost:8000
SUPPORT_EMAIL=support@g-classics.com

# ============================================================================
# CACHING
# ============================================================================

CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=unique-snowflake
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# ============================================================================
# APPLICATION SPECIFIC SETTINGS
# ============================================================================

PAGINATION_PAGE_SIZE=50
MAX_LOGIN_ATTEMPTS=5
PASSWORD_RESET_TIMEOUT=3600
SESSION_TIMEOUT=1800

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

DEBUG_TOOLBAR=False
API_DOCS_URL=/api/docs/
